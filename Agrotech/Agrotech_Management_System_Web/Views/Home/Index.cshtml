@{
    ViewBag.Title = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agrotech</title>
    <link href="~/Scripts/css/Home_Style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css" />
    <script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans&family=Inter&family=Kumbh+Sans:wght@400;700&family=Noto+Sans&family=Open+Sans:ital,wght@0,500;1,400&family=Poppins:wght@300&display=swap" rel="stylesheet">

</head>
<body>
    <div class="container">

        <div class="slider-container">
            <div class="swiper">
                <!-- Additional required wrapper -->
                <div class="swiper-wrapper">
                    <!-- Slides -->

                    <div class="swiper-slide"><img src="~/Scripts/image/1.jpg" alt=""></div>
                    <div class="swiper-slide"><img src="~/Scripts/image/2.jpg" alt=""></div>
                    <div class="swiper-slide"><img src="~/Scripts/image/3.jpg" alt=""></div>
                    <div class="swiper-slide"><img src="~/Scripts/image/4.jpg" alt=""></div>

                </div>
                <!-- If we need pagination -->
                <div class="swiper-pagination"></div>

                <!-- If we need navigation buttons -->
                <div class="swiper-button-prev"></div>

                <div class="swiper-button-next"></div>
            </div>
        </div>

        <main>
            <div class="heading">
                <div class="bar">|</div>
                <div class="heading-name">Our Speciality</div>
            </div>

            <div class="pure-agri">
                <div class="first-box">
                    <h1>Pure Agriculture and Organic Form</h1>
                    <h3>We are leader in Agriculture Market</h3>
                    <p>Pure organic farming means avoiding all unnatural chemicals. In this process of farming, all the fertilisers and pesticides are obtained from natural sources such as bone meal or blood meal.</p>
                    <button>Contact Us</button>
                </div>
                <div class="first-img">
                    <img src="~/Scripts/image/pure_organic.jpg" alt="">
                </div>
            </div>

            <div class="three-img">
                <div class="agriculture-leader">
                    <img src="~/Scripts/image/Agriculture_Leader.jpg" alt="">
                    <h3>Agriculture Leader</h3>
                </div>
                <div class="agriculture-leader">
                    <img src="~/Scripts/image/quality.jpg" alt="">
                    <h3>Quality Standards</h3>
                </div>
                <div class="agriculture-leader">
                    <img src="~/Scripts/image/Organic_Services.jpg" alt="">
                    <h3>Organic Services</h3>
                </div>
            </div>
        </main>

    </div>
    <script src="~/Scripts/script.js"></script>>
</body>
</html>